        localStorage.removeItem('selectedRoomsData');
        var activePackageIds = JSON.parse(localStorage.getItem('selectEventData')) || [];
        for (let i = 0; i < activePackageIds.length; i++) {
            var packageId = activePackageIds[i];
            var cardElement = document.getElementById(packageId);
            if (cardElement) {
                cardElement.classList.add('active-card');
            }
        }
        var retrievedData = localStorage.getItem('selectEventData');
        if (retrievedData) {
            var parsedData = JSON.parse(retrievedData);
        } else { }
    </script>
    <script>
        localStorage.removeItem('guestInfo');
        localStorage.removeItem('selectedPackageTicket');
        var retrievedData = localStorage.getItem('selectEventData');
        if (retrievedData) {
            var parsedData = JSON.parse(retrievedData);
        } else { }
        const customer_id = '<%= customer_id %>';
    </script>
</body>

</html>